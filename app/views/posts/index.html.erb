<div class="jumbotron">
  <h1 class="display-3">Posts</h1>
  <p class="lead">Welcome join the Taroko school.</p>
  <hr class="m-y-2">
  <p class="lead">
    <%= link_to 'Add Post', new_post_path, class: 'btn btn-primary btn-lg' %>
  </p>
</div>

<table class="table table-hover">
  <thead class="thead-inverse">
    <tr>
      <th>Posts</th>
      <th> Modify </th>
      <th> Delete </th>
      <th> Like </th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= link_to post.title, post_path(post) %>
        </td>
        <td>
          <%= link_to 'Modify', edit_post_path(post), class: 'btn btn-outline-warning btn-sm' %>
        </td>
        <td>
          <%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-secondary btn-sm' %>
        </td>
        <td>
          <%= link_to uplike_post_path(post), class: 'btn btn-outline-primary btn-sm', method: :post do %>
            <%= pluralize(post.likes.count, "Like") %>
          <% end %>
          <%= link_to '-', downlike_post_path(post), class: 'btn btn-outline-warning btn-sm', method: :post %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
