<div class="jumbotron">
  <h1 class="display-3">Posts</h1>
  <p class="lead">Welcome join the Taroko school.</p>
  <hr class="m-y-2">
  <p class="lead">
    <%= link_to 'Add Post', new_post_path, class: 'btn btn-primary btn-lg' %>
  </p>
</div>

<table class="table table-hover">
  <thead class="thead-inverse">
    <tr>
      <th>Posts</th>
      <th> Modify </th>
      <th> Delete </th>
      <th> Course </th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= link_to post.title, post_path(post) %>
        </td>
        <td>
          <%= link_to 'Modify', edit_post_path(post), class: 'btn btn-outline-warning btn-sm' %>
        </td>
        <td>
          <%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-secondary btn-sm' %>
        </td>
        <td>
          <%= form_for post, method: :patch, remote: true do |f| %>
            <div class="form-group">
              <%= f.collection_select(:course_id, Course.all, :id, :title, {include_blank: "Please select", selected: 0}, html_options = { onchange: "$(this.form).submit()" }) %>
            </div>
          <% end %>
        <td>
      </tr>
    <% end %>
  </tbody>
</table>
