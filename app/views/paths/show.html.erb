<div class="jumbotron">
  <h1 class="display-3"><%= @path.title %></h1>
  <p class="lead"><strong><%= @path.description %></strong></p>
  <hr class="m-y-2">
  <p class="lead">
    <%= link_to 'Add Course', new_path_course_path(@path), class: 'btn btn-primary' %>
  </p>
</div>

<table class="table table-hover">
  <thead class="thead-inverse">
    <tr>
      <th>Courses</th>
      <th> Modify </th>
      <th> Delete </th>
      <th> Finish </th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td>
          <%= link_to course.title, path_course_path(@path, course) %>
        </td>
        <td>
          <%= link_to 'Modify', edit_path_course_path(@path, course), class: 'btn btn-outline-warning btn-sm' %>
        </td>
        <td>
          <%= link_to 'Delete', path_course_path(@path, course), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-secondary btn-sm' %>
        </td>
        <td>
          <% if if_finish_all_missions?(course) %>
            <span class="glyphicon glyphicon-check"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', paths_path, class: 'btn btn-info btn-lg' %>
